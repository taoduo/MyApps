extends newnoteform
block content
	nav.navbar.navbar-default
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Personal Website
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='https://duos-personal-apps.herokuapp.com/') Personal Website
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li.active
						a(href='https://duos-personal-apps.herokuapp.com/newnotes') New Notes
					li
						a(href='https://duos-personal-apps.herokuapp.com/checknotes') Check Notes
	.container-fluid
		.page-header
			h1(style="color:blue;display:inline") New Note
			a(type="button" class="btn btn-primary" href="https://duos-personal-apps.herokuapp.com/checknotes" style="position:absolute; right:20px; margin-bottom:20px") Check All Notes
		form#noteSubmitForm(role='form' name='note')
			.form-group
				h3#tag(name='tag') EXP
			.form-group
				h1#title(name='title') Default_Title
			.form-group
				h3#keywords(name='keywords') Default_Keywords,
			.form-group
				textarea#mytextarea(name='details') Default_Details
			if login
				.form-group
					button#submitButton.btn.btn-success(type='button') Submit
			else
				.form-group
					button#submitButton.btn.btn-success(type='button' disabled) Submit
		footer.footer(style="background-color:#ffffff")
			p Made by Duo Tao @ 2015
			input#adm-sw(data-size="mini" type="checkbox" name="adm-sw")
